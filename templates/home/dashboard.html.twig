{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets_custom %}
    <link rel="stylesheet" href="css/form.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/media.css">
{% endblock %}

