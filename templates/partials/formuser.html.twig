{{ form_start(form,{'attr': {'class': 'mt-2 col-6 card2 bg-opaque75 rounded'}}) }}
    {{ form_row(form.roles) }}
<div class="row d-flex">
    <div class="col-md-6">
        {{ form_row(form.name) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.email) }}
    </div>
</div>
{% if  action=="add" %}
    {{ form_row(form.password) }}
{% endif %}
<div class="row d-flex">
    <div class="col-md-8">
        {{ form_row(form.avatar) }}
    </div>
    <div class="col-md-4">
        <button id="btn" type="button" onclick="onAvatar()" class="btn btn-primary bi bi-grid-fill mt-31 ">&nbsp;&nbsp;Avatars
        </button>
    </div>
</div>
{{ form_row(form.hostedDomain) }}
<button class="col-3 mb-2 btn btn-primary " type="submit" role="button">Valider</button>

{{ form_end(form) }}

<div class="ms-2 col-4 mt-2 d-flex flex-column card2 bg-opaque75 rounded">
    <div class="m-3 ">
        <p id="compte">Compte: <b>indéterminé</b></p>
        <p>Statut: <span id="status" class="badge rounded-pill bg-danger">Non vérifié</span></p>
        <p class="text-light" id="name">Nom: </p>
        <p class="text-light" id="email">E-mail :</p>
    </div>
    <img id="image_preview" src="{{ asset('assets/images/noimage.jpg') }}" alt="image_preview"
         class="thumb-sm mt-2 p-1"/>
</div>
