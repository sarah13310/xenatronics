{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets_custom %}
    <link rel="stylesheet" href="css/form.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/media.css">
{% endblock %}

{% block right %}

        <div class="mt-3 card bg-opaque75 col-6" >
            <p class="card-header info-color mb-3 font-weight-normal"><i class="bi bi-key l-left"></i>Login</p>

            <form method="post" class="p-3">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a
                                href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <label class="text-light mb-1" for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
                <label class="text-light mb-1" for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary mt-2" type="submit">
                    Se connecter
                </button>
            </form>
        </div>

{% endblock %}
