{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets_custom %}
    <link rel="stylesheet" href="css/form.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/media.css">
{% endblock %}

{% block right %}

    <div class="mt-3 card bg-opaque75 col-6">
        <p class="card-header info-color mb-3 font-weight-normal"><i class="bi bi-key l-left"></i>Login</p>

        <form method="post" class="p-3">
           {{ include('partials/flash.html.twig') }}
            <label class="text-light mb-1" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   autocomplete="email" required autofocus>
            <label class="text-light mb-1" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <div class="d-flex justify-content-between align-items-center">
            <button class="btn btn-lg btn-primary mt-2" type="submit">
                Se connecter
            </button><a href="{{ path('forget.password') }}" class="text-decoration-none me-2 bi bi-question-circle">&nbsp;&nbsp;Mot de passe oubli√©</a>
            </div>
                <div class="separator mt-4 ">OU</div>
            <div class="d-flex justify-content-between">
                <a href="/register" class="btn btn-lg btn-primary mt-4 bi bi-person-plus">&nbsp;&nbsp;Inscription</a>
                <a href="/google/login" class="btn btn-lg btn-primary mt-4 bi bi-google">&nbsp;&nbsp;Google</a>
{#                <a href="/facebook/login" class="btn btn-lg btn-primary mt-4 bi bi-facebook">&nbsp;&nbsp;Facebook</a>#}
                <a href="/github/login" class="btn btn-lg btn-primary mt-4 bi bi-github">&nbsp;&nbsp;GitHub</a>
            </div>
        </form>
    </div>

{% endblock %}
